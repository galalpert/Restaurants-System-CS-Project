      <ComboBox fx:id="branchesList" layoutX="323.0" layoutY="100.0" onAction="#chooseBranch" prefHeight="28.0" prefWidth="150.0" />
      <Label layoutX="130.0" layoutY="92.0" prefHeight="39.0" prefWidth="156.0" text="Select  a branch :">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="130.0" layoutY="145.0" prefHeight="25.0" prefWidth="150.0" text="Select a time :">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="130.0" layoutY="202.0" text="where to sit?">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
