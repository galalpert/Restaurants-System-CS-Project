<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="701.0" prefWidth="862.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReservationBoundary">
   <children>
      <Label fx:id="titleLabel" layoutX="188.0" layoutY="25.0" prefHeight="68.0" prefWidth="534.0" styleClass="menuPageTitle" text="Make a Reservation">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="cancelBtn"  onAction="#cancelReservation" styleClass="return-btn" text="Cancel Reservation" />
      <Button fx:id="continueBtn" layoutX="692.0" layoutY="580.0" mnemonicParsing="false" onAction="#navToPersonalDetailsFilling" styleClass="return-btn" text="Continue" />
      <ComboBox fx:id="branchesList" layoutX="380.0" layoutY="110.0" onAction="#chooseBranch" prefWidth="150.0" />
      <Label layoutX="178.0" layoutY="102.0" prefHeight="41.0" prefWidth="160.0" styleClass="subtitle" text="Select  a branch :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="189.0" layoutY="170.0" prefHeight="41.0" prefWidth="172.0" styleClass="subtitle" text="Select a time :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="189.0" layoutY="230.0" prefHeight="41.0" prefWidth="183.0" styleClass="subtitle" text="where to sit?">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="hoursList" layoutX="380.0" layoutY="170.0" onAction="#chooseHour" prefWidth="150.0" />
      <Pane fx:id="MapPane" layoutX="165.0" layoutY="380.0" prefHeight="301.0" prefWidth="467.0" />
      <Button fx:id="backBtn" layoutX="58.0" layoutY="580.0" mnemonicParsing="false" onAction="#backToHP" styleClass="return-btn" text="Back to HP" />
      <ComboBox fx:id="InOutdoorList" layoutX="380.0" layoutY="230.0" onAction="#chooseInOutdoor" prefWidth="150.0" />
      <Label layoutX="189.0" layoutY="290.0" prefHeight="21.0" prefWidth="150.0" styleClass="subtitle" text="Number of people:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="numpeopleList" layoutX="380.0" layoutY="290.0" onAction="#chooseNumPeople" prefWidth="150.0" />
   </children>
</AnchorPane>
